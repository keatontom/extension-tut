{
	"compilerOptions": {
	  "module": "Node16",
	  "target": "ES2022",
	  "outDir": "./out",
	  "lib": [
		"ES2022"
	  ],
	  "sourceMap": true,
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true, /* Ensures proper module interoperability */
	  "skipLibCheck": true,    /* Skips type checking of all declaration files (*.d.ts) */
	  "forceConsistentCasingInFileNames": true
	},
	"include": [
	  "src/**/*.ts"
	],
	"exclude": [
	  "node_modules",
	  ".vscode-test"
	]
  }
  